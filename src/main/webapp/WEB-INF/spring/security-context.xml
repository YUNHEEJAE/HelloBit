<!-- 				<security:user name="teacher" password="teacher" authorities="ROLE_TEACHER" /> -->
<!-- 				<security:user name="admin" password="admin" authorities="ROLE_FACULITY" /> -->
<!-- 			</security:user-service> -->

		<security:jdbc-user-service data-source-ref="dataSource"
			users-by-username-query="select sid username, spw password, true enable from tbl_student where sid = ?"
			authorities-by-username-query="select sid username, 'ROLE_STUDENT' authority from tbl_student where sid = ?"
		/>
		
	</security:authentication-provider>
</security:authentication-manager>

</beans>
